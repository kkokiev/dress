.about-form

	&__title
		font-size 40px

		+below(largest)
			margin-bottom 40px
			text-align center

		+below(tablet)
			font-size 26px

	&__inputs-container

		> .grid
			margin-x(-30px)

			> [class*='col-']
				padding-x(30px)

	&__input-grp
		display table
		width 100%
		padding-bottom 8px
		border-bottom 4px solid light

		+below(large)
			margin-bottom 20px

	&__label-wrap
		display table-cell

	&__label
		font-size 18px
		white-space nowrap

	&__input-wrap
		display table-cell

	&__input
		width 100%
		padding-x(5px)
		color light
		font-size 16px
		font-style italic
		background transparent
		border 0

	&__submit
		margin-top 4px

