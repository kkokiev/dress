.schedule
	padding 90px

	+below(large)
		padding 20px
		padding-y(40px)

	&__title
		margin-bottom 80px
		text-align center
		font-size 142px
		letter-spacing 0.03em

		+below(1900px)
			font-size 80px

		+below(tablet)
			font-size 40px

		+below(smallest)
			font-size 30px
			margin-bottom 40px

	&__item
		+below(largest)
			margin-bottom 40px

	&__subtitle
		margin-bottom 10px

	&__deco
		height 72px
		margin-bottom 25px
		border-top 2px solid main
		border-left 2px solid main

		+below(largest)
			height auto
			border-left 0

		&_notopborder
			border-top 0

			+below(largest)
				border-top 2px solid main

	&__table
		margin-bottom 70px

		+below(largest)
			margin-bottom 20px

	&__text
		color brand
		line-height 1.2

