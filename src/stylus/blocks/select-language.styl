.select-language
	color main
	font-family font
	font-weight bold

	&__select
		font-size 15px
		width 100px

	.select2-selection
		color main
		font-size 16px
		border none
		background transparent
		border-radius(0)

	.select2-container--default .select2-selection--single .select2-selection__placeholder,
	.select2-container .select2-selection--single .select2-selection__rendered
		padding-left 0
		color main

	.select2-container--default .select2-selection--single .select2-selection__arrow b
		border-color main transparent transparent transparent

	.select2-dropdown
		border none

#select2-select-language-results
	padding-left 0
	color main
	font-size 16px
	background light
	border 0

	.select2-results__option
		margin-y(10px)
		font-size 15px

		&:hover,
		&:focus
			color brand
			background light

	.select2-results__option[aria-selected=true]
		color light
		background brand

	.select2-results__option--highlighted[aria-selected]
		color brand
		background light
