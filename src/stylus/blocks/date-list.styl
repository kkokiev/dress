.date-list
	clearfix()
	
	> li
		position relative
		float left
		margin-right 4px

		&:after
			content ""
			position absolute
			top 0
			bottom 0
			right -4px
			margin-y(auto)
			display block
			height 4px
			width 4px
			background main
			border-radius(50%)

		&:last-child
			&:after
				display none

		> a
			display inline-block
			padding-x(6px)
			color main
			font-size 22px
			line-height 90px
			text-decoration none

			&:hover,
			&:focus
				color brand
				
			+below(1600px)
				font-size 18px
				line-height 60px

	> li.active

		> a
			color light
			background brand

			&:hover,
			&:focus
				color light
				background brand
