.intro
	position relative
	display table
	height 100vh
	width 100%
	padding 92px 90px
	color light
	
	+below(1600px)
		padding 60px
		
	+below(1366px)
		padding-x(0)
		
	+below(480px)
		padding-bottom 0
	
	&__wrap
		display table-cell
		vertical-align middle
		background-color rgba(#434040, .57) //brand-dark
		background-image: url(images/content/bg-1.jpg)
		background-position top center
		background-repeat no-repeat
		-webkit-background-size cover
		-moz-background-size cover
		-o-background-size cover
		background-size cover
		background-color main
			
		+below(768px)
			background-image: url(images/content/bg-1-small.jpg)


		&_nobg
			background-color transparent

	&__main-title
		max-width 420px
		padding-x(30px)
		margin-x(auto)

		+below(480px)
			max-width 320px
			padding-x(15px)

	&__main-title-img
		width 100%