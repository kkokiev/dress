.intro
	position relative
	display table
	height 100vh
	width 100%
	color light
	background-position top center
	background-repeat no-repeat
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	background-color main

	&__wrap
		display table-cell
		vertical-align middle
		background-color rgba(#434040, .57) //brand-dark
		padding 90px

		+below(1400px)
			padding 20px
			padding-top 120px


		&_nobg
			background-color transparent

	&__main-title
		max-width 365px
		margin-x(auto)

		+below(480px)
			max-width 320px

	&__main-title-img
		width 100%