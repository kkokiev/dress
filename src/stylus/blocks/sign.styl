.sign
	display table
	width 100%

	+below(smallest)
		display block

	&__text-wrap
		display table-cell
		width 45%

		+below(smallest)
			display block
			width 100%
			padding-bottom 10px

	&__form-wrap
		display table-cell
		width 55%
		vertical-align bottom

		+below(smallest)
			display block
			width 100%

	&__text
		font-family font-book
		font-size 22px

		+below(1900px)
			font-size 16px

		span
			display block
			margin-top 9px
			font-family font-bold
			font-size 30px
			letter-spacing 0.04em
			text-transform uppercase

			+below(1900px)
				font-size 22px

			+below(smallest)
				display inline-block
				font-size 18px

	&__form
		margin-bottom 5px

	&__input
		display block
		height 38px
		width 100%
		padding-x(15px)
		color brand-dark
		font-family font-alt
		font-size 17px
		border 1px solid brand-dark
		background transparent

	&__submit
		display block
		height 38px
		width 100%
		background brand-dark
		border 0
		tr(.3s)

		&:hover,
		&:focus
			background-color light
