.gallery-item
	
	&__preview
		position relative
		display inline-block
		width 100%
		height 0
		padding-bottom 108%
		overflow hidden
		
		&:hover,
		&:focus
			.gallery-item__preview-info
				background light
		
	&__previev-img
		z-index 1
		position absolute
		display block
		height 100%
		width 100%
		background-position center center
		background-repeat no-repeat
		-webkit-background-size cover
		-moz-background-size cover
		-o-background-size cover
		background-size cover
		
	&__preview-info
		z-index 2
		position absolute
		left 0
		right 0
		bottom 0
		width 100%
		padding-x(5px)
		color main
		font-family font
		font-size 14px
		line-height 2em
		background rgba(255, 255, 255, .65)
		single-line()
		tr(.3s)
		
	&__popup-wrap
		display none
		
	&__popup
		position relative
		
	&__img
		display block
		max-height 78vh
		width auto
		
		+below(768px)
			max-height auto
			max-width 100%
		
	&__popup-info-wrap
		position absolute
		left 0
		bottom 0
		padding-x(25px)
		padding-bottom 15px
		color light
		
		+below(1100px)
			padding-x(10px)
			padding-bottom 10px
		
	&__social-row
		margin-bottom 20px
		
		+below(1100px)
			margin-bottom 5px
		
	&__social
		display inline-block
		clearfix()
		
		> li
			float left
			margin-right 5px
			
			> a
				display block
				height 20px
				width 20px
				border-radius(50%)
				box-shadow 1px 1px 1px 1px rgba(0,0,0, .5)
				
				&:hover,
				&:focus
					opacity-light()
				
				> img
					width 100%
					
	&__social__text
		position relative
		top -4px
		font-size 13px
		line-height 1.2
		text-shadow 1px 1px 2px rgba(0,0,0, .5)
		
	&__popup-text
		margin-bottom 5px
		text-shadow 1px 1px 2px rgba(0,0,0, .5)
		
		+below(1100px)
			font-size 16px