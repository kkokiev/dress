.page
	position relative
	min-height 100vh
	
	&_dark_bg
		background #010101
	
	// wrapper without top padding
	&__wrap
		padding-x(90px)
		padding-bottom 90px
		
		+below(1600px)
			padding-x(60px)
			padding-bottom 60px
			
		+below(1366px)
			padding-x(0)
			
		+below(480px)
			padding-bottom 0
			
	// wrapper with top padding
	&__page-wrap
		padding 90px
		
		+below(1600px)
			padding 60px
		
		+below(1366px)
			padding-x(0)
			
		+below(480px)
			padding-bottom 0
			
	&__vertical-centering-wrap
		position relative
		display table
		min-height 100vh
		width 100%
		padding 90px
		
		+below(1600px)
			padding 60px
		
		+below(1366px)
			padding-x(0)
			
		+below(480px)
			padding-bottom 0
		
	&__vertical-centering-inner-wrap
		display table-cell
		height 100%
		vertical-align middle
		bg-image()
	
	//inner wrap
	&__content-wrap
		padding-top 60px
		padding-x(50px)
		
		+below(1400px)
			padding-top 20px
			padding-x(15px)
	


	&__section
		margin-bottom 60px
		
		+below(1400px)
			margin-bottom 15px


		