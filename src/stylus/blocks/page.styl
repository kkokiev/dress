.page
	position relative

	&__wrap
		padding-x(90px)
		padding-bottom 90px

		+below(largest)
			padding 0

	&__alt-wrap
		padding 90px

		+below(largest)
			padding 0
			padding-top 90px

	&__content-wrap
		padding-top 60px
		padding-x(50px)

	&__section
		margin-bottom 60px

	&__text
		color brand
		font-size 30px

		+below(tablet)
			font-size 20px
